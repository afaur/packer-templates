{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'| {{.Vars}} sudo -S sh '{{.Path}}'",
      "pause_before": "10s",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/os/base.sh",
            "scripts/os/init.sh",
            "scripts/vagrant.sh",
            "scripts/virtual-machine-tools/virtualbox.sh",
            "scripts/provision/puppet.sh",
            "scripts/os/cleanup.sh",
            "scripts/os/zerodisk.sh"
          ]
        },
        "parallels-iso": {
          "scripts": [
            "scripts/os/base.sh",
            "scripts/os/init.sh",
            "scripts/vagrant.sh",
            "scripts/virtual-machine-tools/parallels.sh",
            "scripts/provision/puppet.sh",
            "scripts/os/cleanup.sh",
            "scripts/os/zerodisk.sh"
          ]
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "centos-71-x64-1511-{{.Provider}}.box"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40520,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "f90e4d28fa377669b2db16cbcb451fcb9a89d2460e3645993e30e137ac37d284",
      "iso_checksum_type": "sha256",
      "iso_url": "http://mirrors.ukfast.co.uk/sites/ftp.centos.org/7/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "600s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "512" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ]
    },
    {
      "type": "parallels-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40520,
      "guest_os_type": "centos",
      "http_directory": "http",
      "iso_checksum": "f90e4d28fa377669b2db16cbcb451fcb9a89d2460e3645993e30e137ac37d284",
      "iso_checksum_type": "sha256",
      "iso_url": "http://mirrors.ukfast.co.uk/sites/ftp.centos.org/7/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "600s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "parallels_tools_flavor": "lin",
      "parallels_tools_mode" : "upload",
      "parallels_tools_guest_path": "prl-tools-{{.Flavor}}.iso",
      "prlctl_version_file": ".prlctl_version",
      "prlctl": [
        ["set", "{{.Name}}", "--memsize", "512"],
        ["set", "{{.Name}}", "--cpus", "1"]
      ]
    }
  ]
}
